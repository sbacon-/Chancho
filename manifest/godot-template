<script src=$GODOT_URL></script>
<button id="play" onclick="engine.startGame({onProgress: printProgress })"><i class="fab fa-html5"></i></button>
<script>

var engine = new Engine($GODOT_CONFIG);
var playButton = document.querySelector("#play");     
function printProgress(current, total) {
var percentage = (current/total)*100;
playButton.setAttribute("style","background:linear-gradient(180deg,var(--secondary-dsat) 0%,var(--secondary)"+percentage+"%, var(--complementary) "+percentage+"%,var(--complementary) 100%)"); 
console.log("Loaded " + current + " of " + total + " bytes");
}

</script>
