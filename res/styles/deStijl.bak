html{
  font-family: 'Roboto', sans-serif;
  font-family: 'VT323', monospace;
  --primary: #40363D;
  --primary-highlight: #736573;
  --primary-dark:#ffffff;
  --secondary: #788C30;
  --secondary-highlight: #B3BF56;
  --secondary-dark: #ffffff;
  --tertiary: #3366BB;
  --tertiary-highlight: #ffffff;
  --tertiary-dark: #68788C;
  --neutral: #CCC2C2;

  --backdrop: #1a2530;
  --text: #ffffff;

}
*{
    box-sizing: border-box;
    max-width: 1280px;
    margin: auto;
}
body{
  font-family: 'Roboto',Arial, sans-serif;
  background: linear-gradient(360deg, var(--backdrop) 0%, var(--neutral) 100%);
  font-size: 1em;
  color: var(--text);
}
a{color: var(--tertiary);}
a:hover{color: var(--tertiary-highlight);}

header{
  display:flex;
  flex-direction:row row-reverse;
  z-index: 2;
  font-family:"VT323",Courier,monospace;
  font-size: 1.5em;
  top:0;
  width:100%;
  background-color: var(--primary);
}
.clearfix::after {
  content: "";
  clear: both;
  display: table;
}
#sitename{
  margin: 0;
  padding: 16px;
  display:inline;
  float:left;
  height:100%;
}
nav{
  font-size: 1.5em;
  display: block;
  padding:16px;
  margin: auto;
}
nav ul{
  display:inline;
  list-style-type: none;
}
nav ul > li{
  float:left;
  width:250px;
  text-align: center;
  background-color: var(--secondary-highlight);
  border-left: 6px groove var(--text);
}
nav ul > li:last-child{
  border-right: 6px groove var(--text);;
}
nav ul li a{
  display:block;
  padding: 10px;
}
nav ul li:hover{
  background-color: var(--neutral);
  transition: color,ease-in 200ms;
}
#projects{
  visibility: hidden;
  display:block;
  position: absolute;
  margin: auto;
  background-color: var(--secondary-light);
}
#projects *{
  position: relative;
  list-style: none;
  margin:0;
  padding:0;
  width:110%;
}
#projects li a{
  border: 2px solid var(--neutral);
  padding:16px;
  color:var(--neutral);
  background-color: var(--secondary-dark);
  opacity:.8;
}
#projects li a:hover{
  border: 2px solid var(--secondary-dark);
  background-color: var(--neutral);
  color:var(--secondary-dark);
  transition: color,ease-in 100ms;
  opacity: 1;
}

article{
  position: relative;
  z-index: 1;
  width:100%;
  margin-top:16px;
  background-color: var(--primary);
}
h2{
  padding: 16px;
}

#library{
    font-family: 'VT323',Courier,monospace;
    display:block;
    position:relative;
    margin: auto;
}
#library *{
    position:relative;
}
#library ul{
    margin: auto;
    padding: 16px;
    list-style:none;
    display: flex;
    flex-direction:row;
    flex-wrap:wrap;
    align-items:center;
}
#library li{
    margin:16px;
    border: 14px inset var(--neutral);
    text-align: center;
    font-size:3em;
}
#library a{
    position: relative;
    width:240px;
    height:240px;
    background-size:100%;
    top:50%;
    float:left;
    overflow:hidden;
    z-index: 3;
    color:rgba(0,0,0,0);
    background-opacity:0;
}#library a:hover{
    background-color:var(--tertiary-dark);
    background-size: 0%;
    opacity:1;
    color:rgba(0,0,0,255);
}


/*MEDIA QUERIES*/
@media only screen and (max-width: 600px) {
  header,article,aside,footer{
    margin-left: 2vw;
    width: 96vw;
    display:  block;
    align-items: center;
  }
  nav *{
    text-align: center;
  }
  nav ul, nav ul li{
    margin:auto;
    width:100%;
    float:none;
    display:block;
  }
  #sitename{
    float:none;
  }
}
.center{
  position: relative;
  margin: auto;
  width: 960px;
  height:640px;
  border: 3px solid green;
  padding: 10px;
  background-color: var(--neutral);
}

pre, p{
  font-family: 'Roboto', Arial, sans-serif;
  font-size: 16px;
  margin: 0;
  padding: 16px;
}

img{
  width:30%;

}

/*LEGACY UNITY PROJECTS*/
#unity-canvas { position: relative;}
.webgl-content {position: absolute;}

.webgl-content .logo, .progress {position: absolute; left: 50%; top: 50%; -webkit-transform: translate(-50%, -50%); transform: translate(-50%, -50%);}
.webgl-content .logo {background: url('/res/favicon.png') no-repeat center / contain; width: 154px; height: 130px;}
.webgl-content .progress {height: 18px; width: 141px; margin-top: 90px;}
.webgl-content .progress .empty {background: url('/res/webGL/progress-bar-light.png') no-repeat right / cover; float: right; width: 100%; height: 100%; display: inline-block;}
.webgl-content .progress .full {background: url('/res/webGL/progress-bar-light.png') no-repeat left / cover; float: left; width: 0%; height: 100%; display: inline-block;}

.webgl-content .logo.Dark {background-image: url('/res/favicon.png');}
.webgl-content .progress.Dark .empty {background-image: url('/res/webGL/progress-bar-empty-Light.png');}
.webgl-content .progress.Dark .full {background-image: url('/res/webGL/progress-bar-light.png');}

.webgl-content .footer {margin-top: 5px; height: 38px; line-height: 38px; font-family: Helvetica, Verdana, Arial, sans-serif; font-size: 18px;}
.webgl-content .footer .webgl-logo, .title, .fullscreen {height: 100%; display: inline-block; background: transparent center no-repeat;}
.webgl-content .footer .webgl-logo {background-image: url('/res/webGL/webgl-logo.png'); width: 204px; float: left;}
.webgl-content .footer .title {font-family: 'Roboto',sans-serif;margin-right: 10px; float: right;}
.webgl-content .footer .fullscreen {background-image: url('/res/webGL/fullscreen-button.png'); width: 38px; float: right;}
